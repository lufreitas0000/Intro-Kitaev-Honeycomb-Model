{
    "name": "Julia (JULIA_KHM)",
    "build": {
        "dockerfile": ".devcontainer/Dockerfile"
    },
    "forwardPorts": [
        1234
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "julialang.language-julia"
            ],
            "settings": {
                "julia.environmentPath": "."
            }
        }
    },
    "postCreateCommand": "julia --project=. -e 'using Pkg; Pkg.instantiate()'"
}
